@page
@model diploma.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 50px;
        background-color: #f2f2f2;
    }

    .register-form {
        background: white;
        padding: 50px;
        border-radius: 8px;
        max-width: 400px;
        margin: auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    }

        .register-form h2 {
            text-align: center;
        }

    .form-gorup {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-button: 5px;
    }

    .form-group input,
    .form-group select {
        width: 100%;
        padding: 8px;
        broder-radius: 4px;
        border: 1px solid #ccc;
    }

    .for-group button {
        width: 100%;
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-group button:hover {
        background-color: #45a049;
    }
</style>
<div class="register-form">
    <h2>Registracija</h2>
    <form action="#" method="POST">
        <div class="form-group">
            <label for="ime">Ime</label>
            <input type="text" id="ime" name="ime" required>
        </div>
        <div class="form-group">
            <label for="priimek">Priimek</label>
            <input type="text" id="priimek" name="priimek" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required />
        </div>
        <div class="form-group">
            <label for="vloga">Vloga</label>
            <select id="vloga" name="vloga" required>
                <option value="">Izberi vlogo</option>
                <option value="skladiscnik">Skladiščnik</option>
                <option value="izmenovodja">Izmenovodja</option>
            </select>
        </div>
        <div class="form-group">
            <button type="submit">Registriraj se</button>
        </div>
    </form>
</div>