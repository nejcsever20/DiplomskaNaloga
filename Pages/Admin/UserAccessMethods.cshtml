@page
@model diplomska.Pages.Admin.UserAccessMethodsModel
@{
    ViewData["Title"] = "User Access Methods";
}
<head>
    <link rel="stylesheet" href="~/css/useraccessmethods.css" />
    <style>
        .dropdown-section {
            margin-bottom: 20px;
        }

        .dropdown-button {
            background-color: #125D98;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-align: left;
            width: 100%;
        }

            .dropdown-button:hover {
                background-color: #3C8DAD;
            }

        .dropdown-content {
            display: none;
            padding-top: 10px;
        }

            .dropdown-content table {
                margin-top: 10px;
            }
    </style>

    <script>
        function toggleDropdown(id) {
            const content = document.getElementById(id);
            content.style.display = content.style.display === "none" ? "block" : "none";
        }
    </script>
</head>

<h2>User Access Methods</h2>

<!-- Google Login Users -->
<div class="dropdown-section provider-group">
    <button class="dropdown-button" onclick="toggleDropdown('google-users')">Google Users</button>
    <div id="google-users" class="dropdown-content">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Login Provider</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersWithLoginMethods.Where(u => u.LoginProvider == "Google"))
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.LoginProvider</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

