@page
@using diplomska.Properties
@model diplomska.Pages.Admin.UserAccessMethodsModel
@{
    ViewData["Title"] = "User Access Methods";
}
<head>
    <link rel="stylesheet" href="~/css/useraccessmethods.css" />
    <style>
        .dropdown-section {
            margin-bottom: 20px;
        }

        .dropdown-button {
            background-color: #125D98;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            text-align: left;
            width: 100%;
            transition: background-color 0.3s ease;
        }

            .dropdown-button:hover {
                background-color: #3C8DAD;
            }

        .dropdown-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.5s ease, opacity 0.5s ease;
            opacity: 0;
        }

            .dropdown-content.show {
                max-height: 1000px; /* or an appropriate high value */
                opacity: 1;
            }

            .dropdown-content table {
                margin-top: 10px;
            }

    </style>

    <script>
        function toggleDropdown(id) {
            const content = document.getElementById(id);
            content.classList.toggle("show");
        }
    </script>
</head>

<h2>@Resources.uae_methods</h2>

<!-- Google Login Users -->
<div class="dropdown-section provider-group">
    <button class="dropdown-button" onclick="toggleDropdown('google-users')">@Resources.uae_google</button>
    <div id="google-users" class="dropdown-content">
        <table class="table">
            <thead>
                <tr>
                    <th>@Resources.uae_username</th>
                    <th>@Resources.mr_email</th>
                    <th>@Resources.uae_login_provider</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersWithLoginMethods.Where(u => u.LoginProvider == "Google"))
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.LoginProvider</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


