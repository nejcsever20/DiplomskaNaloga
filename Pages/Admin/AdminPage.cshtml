@page
@model diplomska.Pages.Admin.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/izmenovodja.css" />
    <style>
        .card + .card {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="page-header text-center">Lep pozdrav, Admin!</h1>
        <p class="text-center lead">This is the Admin dashboard. Use the links below to access various functionalities available to your role and others.</p>

        <!-- Admin Tasks Section -->
        <div class="card">
            <div class="card-header">Admin Tasks</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Admin/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Admin/Naklad" class="btn btn-dark">Naklad</a>
                <a asp-page="/Admin/Graphs" class="btn btn-dark">Graphs</a>
            </div>
        </div>

        <!-- Admin Management Section -->
        <div class="card">
            <div class="card-header">Admin Management</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/ManageUsers" class="btn btn-dark">Manage Users</a>
                <a asp-page="/Admin/ManageRoles" class="btn btn-dark">Manage Roles</a>
                <a asp-page="/Admin/RemoveRoles" class="btn btn-dark">Add or Remove Roles</a>
            </div>
        </div>

        <!-- Other Admin Functionalities -->
        <div class="card">
            <div class="card-header">Other</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/ConfirmRegister" class="btn btn-dark">Approve Users</a>
                <a asp-page="/Admin/DownloadExcell" class="btn btn-dark">Download Excel</a>
                <a asp-page="/Analitika/Graphs/Grpahs" class="btn btn-dark">Graphs</a>
            </div>
        </div>

        <!-- Role-Based Functionalities (not dropdown anymore) -->
        <div class="card">
            <div class="card-header">Role-Based Functionalities</div>
            <div class="card-body">

                <!-- Analitika Section -->
                <div class="mb-4">
                    <h5>Analitika</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Analitika/Index" class="btn btn-dark">Go to Index</a>
                        <a asp-page="/Analitika/Graphs/Graphs" class="btn btn-dark">Graphs</a>
                    </div>
                </div>

                <!-- Izmenovodja Section -->
                <div class="mb-4">
                    <h5>Izmenovodja</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Izmenovodja/Index" class="btn btn-dark">Go to Index</a>
                        <a asp-page="/Izmenovodja/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                        <a asp-page="/Izmenovodja/Naklad" class="btn btn-dark">Naklad</a>
                    </div>
                </div>

                <!-- Skladiščnik Section -->
                <div>
                    <h5>Skladiščnik</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Skladiščnik/Index" class="btn btn-dark">Go to Index</a>
                        <a asp-page="/Skladiščnik/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                        <a asp-page="/Skladiščnik/Naklad" class="btn btn-dark">Naklad</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap only -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
