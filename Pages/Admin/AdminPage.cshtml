@page
@model diplomska.Pages.Admin.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Global Styling */
        body {
            background-color: #f4f7fc;
            margin-top: 70px;
        }

        .navbar {
            background-color: #343a40;
            padding: 0.8rem 1rem;
        }

        .navbar-brand {
            color: white;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .navbar-nav .nav-link {
            color: white;
            font-size: 1.1rem;
        }

        .navbar-nav .nav-link:hover {
            color: #f0f4f8;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 30px 20px;
            background-color: white;
            border-radius: 12px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }

        .card {
            margin-top: 30px;
        }

        .btn-dark {
            width: 100%;
            margin-bottom: 15px;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 5px;
        }

        .btn-dark:hover {
            background-color: #444;
        }

        .page-header {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #343a40;
        }

        .card-header {
            background-color: #343a40;
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
        }

        .lead {
            font-size: 1.25rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">diplomska</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-page="/Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1 class="page-header text-center">Lep pozdrav, Admin!</h1>
        <p class="text-center lead">This is the Admin dashboard. Use the links below to access various functionalities available to your role and other user roles.</p>

        <!-- Dashboard Cards -->
        <div class="card">
            <div class="card-header">
                Role Management
            </div>
            <div class="card-body">
                <a asp-page="/Admin/ManageUsers" class="btn btn-dark">Manage Users</a>
                <a asp-page="/Admin/AssignRoles" class="btn btn-dark">Assign Roles</a>
                <a asp-page="/Admin/RemoveRoles" class="btn btn-dark">Remove Roles</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Izmenovodja Tasks
            </div>
            <div class="card-body">
                <a asp-page="/Izmenovodja/Index" class="btn btn-dark">Go to Izmenovodja Index</a>
                <a asp-page="/Izmenovodja/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Izmenovodja/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Skladiščnik Tasks
            </div>
            <div class="card-body">
                <a asp-page="/Skladiscnik/Index" class="btn btn-dark">Go to Skladiščnik Index</a>
                <a asp-page="/Skladiscnik/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Skladiscnik/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                System Overview
            </div>
            <div class="card-body">
                <a asp-page="/Admin/SystemLogs" class="btn btn-dark">View System Logs</a>
                <a asp-page="/Admin/Reports" class="btn btn-dark">View Reports</a>
            </div>
        </div>
    </div>

</body>
</html>