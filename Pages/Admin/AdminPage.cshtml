@page
@model diplomska.Pages.Admin.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* === Hisense Design System === */
        :root {
            /* Primary Colors */
            --hisense-gray: #40474F;
            --hisense-jade: #00AAA6;
            --hisense-black: #000000;
            /* Secondary Colors */
            --hisense-silver: #A6A6A6;
        }

        /* === Page Background === */
        body {
            background: url('/images/admin-bg.jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* === Typography === */
        h1.page-header {
            color: var(--hisense-black);
            font-weight: 700;
        }

        p.lead {
            color: var(--hisense-gray);
            font-size: 1.2rem;
        }

        h5 {
            color: var(--hisense-black);
            font-weight: 600;
        }

        /* === Buttons === */
        .hisense-btn {
            background-color: var(--hisense-jade);
            color: white;
            border: none;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .hisense-btn:hover {
                background-color: var(--hisense-gray);
                color: white;
            }

        /* === Cards === */
        .hisense-card {
            border: 1px solid var(--hisense-silver);
            background-color: rgba(248, 249, 250, 0.95); /* light background with slight transparency */
            border-radius: 8px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .hisense-card-header {
            background-color: var(--hisense-gray);
            color: white;
            font-weight: bold;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid var(--hisense-silver);
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        /* === Spacing Utilities === */
        .gap-2 > * {
            margin-right: 0.5rem;
            margin-bottom: 0.5rem;
        }

        /* === Container Fix for Contrast === */
        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 2rem;
            border-radius: 12px;
        }
    </style>
}


<body>
    <div class="container mt-5 pt-3">
        <h1 class="page-header text-center">Lep pozdrav, Admin!</h1>
        <p class="text-center lead">This is the Admin dashboard. Use the links below to access various functionalities available to your role and others.</p>

        <!-- Admin Tasks Section -->
        <div class="card hisense-card mb-4">
            <div class="card-header hisense-card-header">Admin Tasks</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/Index" class="btn hisense-btn">Go to Index</a>
                <a asp-page="/Admin/LoadingCheckout" class="btn hisense-btn">Loading Checkout</a>
                <a asp-page="/Admin/Naklad" class="btn hisense-btn">Naklad</a>
                <a asp-page="/Analitika/Graphs/Graph" class="btn hisense-btn">Graphs</a>
            </div>
        </div>

        <!-- Admin Management Section -->
        <div class="card hisense-card mb-4">
            <div class="card-header hisense-card-header">Admin Management</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/ManageUsers" class="btn hisense-btn">Manage Users</a>
                <a asp-page="/Admin/ManageRoles" class="btn hisense-btn">Manage Roles</a>
                <a asp-page="/Admin/RemoveRoles" class="btn hisense-btn">Add or Remove Roles</a>
            </div>
        </div>

        <!-- Other Admin Functionalities -->
        <div class="card hisense-card mb-4">
            <div class="card-header hisense-card-header">Other</div>
            <div class="card-body d-flex flex-wrap gap-2">
                <a asp-page="/Admin/ConfirmRegister" class="btn hisense-btn">Approve Users</a>
                <a asp-page="/Admin/DownloadExcell" class="btn hisense-btn">Download Excel</a>
                <a asp-page="/Analitika/Graphs/Graphs" class="btn hisense-btn">Graphs</a>
            </div>
        </div>

        <!-- Role-Based Functionalities -->
        <div class="card hisense-card mb-4">
            <div class="card-header hisense-card-header">Role-Based Functionalities</div>
            <div class="card-body">

                <div class="mb-4">
                    <h5>Analitika</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Analitika/Index" class="btn hisense-btn">Go to Index</a>
                        <a asp-page="/Analitika/Graphs/Graphs" class="btn hisense-btn">Graphs</a>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>Izmenovodja</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Izmenovodja/Index" class="btn hisense-btn">Go to Index</a>
                        <a asp-page="/Izmenovodja/LoadingCheckout" class="btn hisense-btn">Loading Checkout</a>
                        <a asp-page="/Izmenovodja/Naklad" class="btn hisense-btn">Naklad</a>
                    </div>
                </div>

                <div>
                    <h5>Skladiščnik</h5>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-page="/Skladiščnik/Index" class="btn hisense-btn">Go to Index</a>
                        <a asp-page="/Skladiščnik/LoadingCheckout" class="btn hisense-btn">Loading Checkout</a>
                        <a asp-page="/Skladiščnik/Naklad" class="btn hisense-btn">Naklad</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>