@page
@model diplomska.Pages.Admin.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboardstaend</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>
        body {
            background-color: #f4f7fc;
            margin-top: 70px;
            animation: fadeIn 0.8s ease;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .page-header {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #343a40;
            animation: slideDown 0.6s ease-out;
        }

        .lead {
            font-size: 1.25rem;
            color: #6c757d;
            animation: fadeIn 1s ease-in 0.3s;
            animation-fill-mode: both;
        }

        @@keyframes slideDown {
            from {
                transform: translateY(-30px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .card {
            margin-top: 30px;
            opacity: 0;
            transform: translateY(20px);
            animation: cardEnter 0.6s ease forwards;
        }

        .card:nth-of-type(2) { animation-delay: 0.2s; }
        .card:nth-of-type(3) { animation-delay: 0.4s; }
        .card:nth-of-type(4) { animation-delay: 0.6s; }

        @@keyframes cardEnter {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .btn-dark {
            flex: 1;
            min-width: 0;
            margin: 5px;
            font-size: 1rem;
            transition: transform 0.2s ease, background-color 0.3s ease;
        }

        .btn-dark:hover {
            transform: scale(1.05);
            background-color: #1d2124;
        }

        .button-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="page-header text-center">Lep pozdrav, Admin!</h1>
        <p class="text-center lead">This is the Admin dashboard. Use the links below to access various functionalities available to your role and other user roles.</p>

        <div class="card">
            <div class="card-header">Role Management</div>
            <div class="card-body button-group">
                <a asp-page="/Admin/ManageUsers" class="btn btn-dark">Manage Users</a>
                <a asp-page="/Admin/ManageRoles" class="btn btn-dark">Manage Roles</a>
                <a asp-page="/Admin/RemoveRoles" class="btn btn-dark">Add or Remove Roles</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Admin Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Admin/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Admin/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Admin/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Izmenovodja Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Izmenovodja/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Izmenovodja/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Izmenovodja/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Skladiščnik Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Skladiscnik/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Skladiscnik/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Skladiscnik/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">System Overview</div>
            <div class="card-body button-group">
                <a asp-page="/Admin/ConfirmRegister" class="btn btn-dark">Approve Users</a>
                <a asp-page="/Admin/DownloadExcell" class="btn btn-dark">Download Excel</a>
            </div>
        </div>
    </div>

</body>
</html>
 