@page
@model diplomska.Pages.Admin.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f7fc;
            margin-top: 70px;
        }

        .card {
            margin-top: 30px;
        }

        .card-header {
            background-color: #343a40;
            color: white;
            font-size: 1.25rem;
            font-weight: bold;
        }

        .btn-dark {
            flex: 1;
            min-width: 0;
            margin: 5px;
            font-size: 1rem;
        }

        .button-group {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .page-header {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #343a40;
        }

        .lead {
            font-size: 1.25rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top">
        <a class="navbar-brand" asp-area="" asp-page="/Index">diplomska</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Admin/Index">Admin Dashboard</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        <h1 class="page-header text-center">Lep pozdrav, Admin!</h1>
        <p class="text-center lead">This is the Admin dashboard. Use the links below to access various functionalities available to your role and other user roles.</p>

        <!-- Dashboard Cards -->
        <div class="card">
            <div class="card-header">Role Management</div>
            <div class="card-body button-group">
                <a asp-page="/Admin/ManageUsers" class="btn btn-dark">Manage Users</a>
                <a asp-page="/Admin/ManageRoles" class="btn btn-dark">Manage Roles</a>
                <a asp-page="/Admin/ManageRoles" class="btn btn-dark">Remove Roles</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Izmenovodja Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Izmenovodja/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Izmenovodja/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Izmenovodja/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Skladiščnik Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Skladiscnik/Index" class="btn btn-dark">Go to Index</a>
                <a asp-page="/Skladiscnik/LoadingCheckout" class="btn btn-dark">Loading Checkout</a>
                <a asp-page="/Skladiscnik/Naklad" class="btn btn-dark">Naklad</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">System Overview</div>
            <div class="card-body button-group">
                <a asp-page="/Admin/SystemLogs" class="btn btn-dark">View Logs</a>
                <a asp-page="/Admin/Reports" class="btn btn-dark">View Reports</a>
                <a asp-page="/Izmenovodja/ConfirmRegister" class="btn btn-dark">Approve Users</a>
            </div>
        </div>
    </div>

</body>
</html>
