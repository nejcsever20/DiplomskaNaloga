@page
@model diplomska.Pages.Izmenovodja.NakladModel
@using diplomska.Models
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Začetek, konec naklada";
}

<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
        }

        h1 {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 10px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input, textarea, select {
            padding: 6px;
            border-radius: 4px;
            border: 1px solid #ccc;
            width: 100%;
            margin-bottom: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ccc;
        }

        th {
            background-color: #f2f2f2;
        }

        .back-button {
            display: inline-block;
            margin-top: 20px;
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
        }

        .back-button:hover {
            background-color: #e53935;
        }

        .delete-button {
            background-color: #f44336;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete-button:hover {
            background-color: #e53935;
        }

        /* Modal styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 40%;
            text-align: center;
        }

        .close {
            color: #aaa;
            font-size: 28px;
            font-weight: bold;
            position: absolute;
            top: 5px;
            right: 15px;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Začetek, konec naklada</h1>

    <div>
        <label>Št. transporta:</label>
        <span>@Model.StTransporta</span>
    </div>

    <hr />

    <form method="post">
        <div>
            <label>Rampa 1:</label>
            <input type="number" asp-for="Rampa1" />
        </div>

        <div>
            <label>Rampa 2:</label>
            <input type="number" asp-for="Rampa2" />
        </div>

        <div>
            <label>Carinska vrvica:</label>
            <input type="text" asp-for="CarinskaVrvicva" />
        </div>

        <div>
            <label>Ustreznost vozilca:</label>
            <input type="text" asp-for="UstreznostVozilca" />
        </div>

        <div>
            <label>Začetek naklada:</label>
            <input type="datetime-local" asp-for="ZacetekNaklada" />
            <button type="submit" asp-page-handler="SetTimes">Nastavi</button>
        </div>

        <div>
            <label>Konec naklada:</label>
            <input type="datetime-local" asp-for="KonecNaklada" />
            <button type="submit" asp-page-handler="SetTimes">Nastavi</button>
        </div>

        <div>
            <label>Voznik zavrnil začetek zaradi pavze:</label>
            <input type="datetime-local" asp-for="ZavrnilZacetek" />
            <button type="submit" asp-page-handler="SetTimes">Nastavi</button>
        </div>
    </form>

    <hr />

    <h3>Izkladiščeno</h3>
    <table>
        <thead>
            <tr>
                <th>Količina</th>
                <th>Palete</th>
                <th>Skladiščnik</th>
                <th>Datum</th>
                <th>Akcija</th> <!-- Added for delete action -->
            </tr>
        </thead>
        <tbody>
            @if (Model.IzkladiscenoList != null && Model.IzkladiscenoList.Any())
            {
                @foreach (var item in Model.IzkladiscenoList)
                {
                    <tr id="row-@item.Id">
                        <td>@item.Kolicina</td>
                        <td>@item.Palete</td>
                        <td>@item.Skladiscnik</td>
                        <td>@item.Datum.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <button class="delete-button" onclick="openDeleteModal(@item.Id)">Izbriši</button>
                        </td> <!-- Delete button -->
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">Ni podatkov za izkladiščeno.</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Modal for confirming deletion -->
    <div id="myModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Ali ste prepričani, da želite izbrisati ta element?</h2>
            <form method="post" asp-page-handler="DeleteItem">
                <input type="hidden" id="deleteItemId" name="itemId" />
                <button type="submit" class="btn btn-danger">Izbriši</button>
            </form>
        </div>
    </div>

    <hr />

    <h4>Dodaj izkladiščeno</h4>
    <form method="post" asp-page-handler="SaveData">
        <div>
            <label>Količina:</label>
            <input type="number" asp-for="Kolicina" required />
        </div>
        <div>
            <label>Palete:</label>
            <input type="number" asp-for="Palete" required />
        </div>
        <div>
            <label>Skladiščnik:</label>
            <select asp-for="Skladiscnik" asp-items="Model.SkladiscnikSelectList" required></select>
        </div>
        <button type="submit">Dodaj</button>
    </form>

    <hr />

    <h4>Opombe</h4>
    <form method="post" asp-page-handler="AddNote">
        <textarea asp-for="Notes" rows="4" cols="50"></textarea><br />
        <button type="submit">Dodaj</button>
    </form>

    <a href="javascript:history.back()" class="back-button">Nazaj</a>

    <script>
        // Modal control script
        var modal = document.getElementById("myModal");
        var span = document.getElementsByClassName("close")[0];

        // Open the modal with the itemId
        function openDeleteModal(itemId) {
            document.getElementById("deleteItemId").value = itemId;
            modal.style.display = "block";
        }

        // Close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // Close modal if the user clicks anywhere outside the modal
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
</body>
</html>