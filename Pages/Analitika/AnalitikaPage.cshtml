@page
@using diplomska.Properties
@model diplomska.Pages.Analitik.AnalitikPageModel
@{
    ViewData["Title"] = "Analitik Dashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Analitik Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/admin.css" />
    <style>

        body {
    background-color: #A6A6A6; /* API MetaFOIL 1019S Arctic silver */
    margin-top: 70px;
    animation: fadeIn 0.8s ease;
}

@@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.page-header {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 30px;
    color: #40474F; /* Hisense Grey */
    animation: slideDown 0.6s ease-out;
}

.lead {
    font-size: 1.25rem;
    color: #00AAA6; /* Hisense Jade */
    animation: fadeIn 1s ease-in 0.3s;
    animation-fill-mode: both;
}

@@keyframes slideDown {
    from {
        transform: translateY(-30px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.card {
    margin-top: 30px;
    opacity: 0;
    transform: translateY(20px);
    animation: cardEnter 0.6s ease forwards;
}

.card:nth-of-type(2) {
    animation-delay: 0.2s;
}

.card:nth-of-type(3) {
    animation-delay: 0.4s;
}

@@keyframes cardEnter {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.btn-dark {
    flex: 1;
    min-width: 0;
    margin: 5px;
    font-size: 1rem;
    transition: transform 0.2s ease, background-color 0.3s ease;
    background-color: #40474F; /* Hisense Grey */
    color: white;
}

.btn-dark:hover {
    transform: scale(1.05);
    background-color: #00AAA6; /* Hisense Jade */
}

.button-group {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

    </style>
</head>
<body>

    <div class="container">
        <h1 class="page-header text-center">Pozdravljeni, Analitik!</h1>
        <p class="text-center lead">@Resources.analyst_page</p>

        <div class="card">
            <div class="card-header">Analitik Tasks</div>
            <div class="card-body button-group">
                <a asp-page="/Analitika/Index" class="btn btn-dark">@Resources.to_index</a>
                <a asp-page="/Analitika/Graphs/Graph" class="btn btn-dark">@Resources.to_graphs</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">System Overview</div>
            <div class="card-body button-group">
                <a asp-page="/Analitika/ConfirmRegister" class="btn btn-dark">@Resources.approve</a>
                <a asp-page="/Analitika/DownloadExcell" class="btn btn-dark">@Resources.analyst_download_excel</a>
            </div>
        </div>
    </div>

</body>
</html>
