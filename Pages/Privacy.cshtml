@page
@using diplomska.Properties
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}
<head>
    <link rel="stylesheet" href="~/css/privacypolicy.css" />
</head>

<h1>@ViewData["Title"]</h1>

<p>
    This Privacy Policy explains how we collect, use, and disclose your information when you use our Service. It also informs you about your privacy rights and how the law protects you.
</p>

<div class="cards-container">
    <section class="card">
        <h2>@Resources.info_we_gather</h2>
        <p>@Resources.types_of_info</p>
        <ul>
            <li><strong>Personal Data:</strong> such as your name, email address, and contact details.</li>
            <li><strong>Usage Data:</strong> information on how you access and use the Service.</li>
            <li><strong>Cookies and Tracking Technologies:</strong> to track activity on our Service and hold certain information.</li>
        </ul>
    </section>

    <section class="card">
        <h2>@Resources.utilising_info</h2>
        <p>@Resources.info_we_use</p>
        <ul>
            <li>@Resources.provide_maintain</li>
            <li>@Resources.notify</li>
            <li>@Resources.customer_support</li>
            <li>@Resources.monitoring</li>
            <li>@Resources.working_items</li>
        </ul>
    </section>

    <section class="card">
        <h2>@Resources.disclosure</h2>
        <p>@Resources.privacy_information</p>
    </section>

    <section class="card">
        <h2>@Resources.privacy_rights</h2>
        <p>@Resources.your_rights</p>
    </section>

    <section class="card">
        <h2>@Resources.security_of_user_info</h2>
        <p>@Resources.strive</p>
    </section>

    <section class="card">
        <h2>@Resources.changes</h2>
        <p>@Resources.policy_updates</p>
    </section>

    <section class="card">
        <h2>Contact Us</h2>
        <p>If you have any questions about this Privacy Policy, please contact us at <a href="mailto:privacy@example.com">privacy@example.com</a>.</p>
    </section>
</div>
