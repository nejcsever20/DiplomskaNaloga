@using Microsoft.AspNetCore.Identity
@inject IHttpContextAccessor HttpContextAccessor
@using System.Globalization
@using diplomska.Properties
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var theme = Context.Request.Cookies["theme"] ?? "light";
    var currentCulture = CultureInfo.CurrentCulture.Name;

    var selectedRoleClaim = User?.Claims.FirstOrDefault(c => c.Type == "SelectedRole")?.Value;
    string userRole = !string.IsNullOrEmpty(selectedRoleClaim) ? selectedRoleClaim : "SelectingRole";

    string flagCode = currentCulture.ToLowerInvariant() switch
    {
        "en" => "us",
        "sl-si" => "sl-si",
        "de" => "de",
        "es" => "es",
        "fr" => "fr",
        "sq-Al" => "sq-Al",
        "bg-BG" => "bg-BG",
        "cs-CZ" => "cs-CZ",
        "it-IT" => "it-IT",
        "mk-MK" => "mk-MK",
        "pl-PL" => "pl-PL",
        "ro-RO" => "ro-RO",
        "ru" => "ru",
        "sr" => "sr",
        "sk-SK" => "sk-SK",
        "tr-TR" => "tr-TR",
        _ => "us"
    };
}

<!DOCTYPE html>
<html lang="@currentCulture" data-theme="@theme">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - diplomska</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/diplomska.styles.css" asp-append-version="true" />

    @if (theme == "custom")
    {
        <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    }

    @RenderSection("Styles", required: false)

    <style>
        :root {
            --bg: @(theme == "dark" ? "#1e1e1e" : "#ffffff");
            --text: @(theme == "dark" ? "#dddddd" : "#000000");
            --card-bg: @(theme == "dark" ? "#2e2e2e" : "#f8f9fa");
        }

        body {
            background-color: var(--bg);
            color: var(--text);
            transition: background-color 0.5s ease, color 0.5s ease;
        }

        .card {
            background-color: var(--card-bg);
        }

        select.theme-select {
            width: 100%;
            font-size: 0.875rem;
            padding: 0.25rem 0.5rem;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top py-1">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">diplomska</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (!(User.Identity?.IsAuthenticated ?? false))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">@Resources._layout_home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Privacy">@Resources._layout_privacy</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link disabled">@Resources._layout_home</span>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link disabled">@Resources._layout_privacy</span>
                            </li>

                            @* Role-based navigation shown only AFTER a role is selected *@
                            @if (userRole == "SelectingRole")
                            {
                                <li class="nav-item">
                                    <a class="nav-link @(Context.Request.Path == "/ChooseRole" ? "active" : "")" asp-page="/ChooseRole">
                                        @Resources.role
                                    </a>
                                </li>
                            }
                            else
                            {
                                switch (userRole)
                                {
                                    case "Izmenovodja":
                                        <li class="nav-item">
                                            <a class="nav-link" asp-page="/Izmenovodja/IzmenovodjaPage">@Resources._layout_izmenovodja</a>
                                        </li>
                                        break;
                                    case "Skladiščnik":
                                        <li class="nav-item">
                                            <a class="nav-link" asp-page="/Skladiščnik/SkladiščnikPage">@Resources._layout_skaldiscnik</a>
                                        </li>
                                        break;
                                    case "Admin":
                                        <li class="nav-item">
                                            <a class="nav-link" asp-page="/Admin/AdminPage">@Resources._Layout_admin</a>
                                        </li>
                                        break;
                                    case "Analitika":
                                        <li class="nav-item">
                                            <a class="nav-link" asp-page="/Analitika/AnalitikaPage">@Resources._Layout_analitika</a>
                                        </li>
                                        break;
                                }
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            string roleDisplay = userRole switch
                            {
                                "Izmenovodja" => @Resources._layout_izmenovodja,
                                "Skladiščnik" => @Resources._layout_skaldiscnik,
                                "Analitika" => @Resources._Layout_analitika,
                                "Admin" => @Resources._Layout_admin,
                                _ => Resources.role
                            };

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <img src="~/images/profile-icon.png" alt="Profile" width="30" height="30" class="rounded-circle me-2" />
                                    <span>@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item-text text-muted">Role: @roleDisplay</span></li>
                                    <li><a class="dropdown-item" asp-page="/EditTheme">@Resources._layout_ct</a></li>
                                    <li class="px-3">
                                        <form method="post" asp-page="/SetTheme">
                                            <select name="theme" class="theme-select form-select form-select-sm" onchange="this.form.submit()">
                                                <option value="light" selected="@(theme == "light")">@Resources._layout_light</option>
                                                <option value="dark" selected="@(theme == "dark")">@Resources._layout_dark</option>
                                                <option value="custom" selected="@(theme == "custom")">@Resources._layout_custom</option>
                                            </select>
                                        </form>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                            <button type="submit" class="dropdown-item">@Resources._layout_logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="langDropdown" data-bs-toggle="dropdown">
                                    <img src="~/images/flags/@(flagCode).png" alt="@currentCulture" width="20" class="me-2" />
                                    @currentCulture.ToUpperInvariant()
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="langDropdown">
                                    @{
                                        var languages = new[] {
                                ("en", "English"), ("sl-si", "Slovenščina"), ("de", "German"), ("es", "Spanish"),
                                ("fr", "French"), ("sq-Al", "Albanian"), ("bg-BG", "Bulgarian"), ("cs-CZ", "Czech"),
                                ("it-IT", "Italian"), ("mk-MK", "Macedonian"), ("pl-PL", "Polish"), ("ro-RO", "Romanian"),
                                ("ru", "Russian"), ("sr", "Serbian - Cyrillic"), ("sk-SK", "Slovak"), ("tr-TR", "Turkish")
                                };

                                        foreach (var lang in languages)
                                        {
                                            var lc = lang.Item1.ToLowerInvariant().Replace("_", "-");
                                            <li>
                                                <form method="post" asp-page="/SetLanguage" class="d-inline w-100">
                                                    <input type="hidden" name="culture" value="@lang.Item1" />
                                                    <button type="submit" class="dropdown-item d-flex align-items-center">
                                                        <img src="~/images/flags/@(lc).png" alt="@lang.Item2" width="20" class="me-2" />
                                                        @lang.Item2
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">@Resources.prijava</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">@Resources.register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container pt-5 mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
